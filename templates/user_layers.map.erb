%>
MAP

OUTPUTFORMAT
    NAME agg
    DRIVER AGG/PNG
    IMAGEMODE RGBA
    FORMATOPTION "INTERLACE=false"
    MIMETYPE "image/png"
END

FONTSET "./fonts.lst"
IMAGETYPE agg
MAXSIZE 10000
SIZE 800 800
EXTENT 16805492 -4049385 16857351 -3975830
UNITS meters


WEB
    LOG '/tmp/mapserver.log'
    METADATA
        wms_srs "epsg:3857 epsg:900913 epsg:4326"
        labelcache_map_edge_buffer "-10"
	# Consider this: 
	# 	"tile_map_edge_buffer" "50"
	# instead of needing to declare a gutter in openlayers.
        wms_title "osm france"
        "ows_enable_request" "*"
    END
END

DEBUG 10
CONFIG "PROJ_LIB" "/usr/share/proj"
CONFIG "MS_ERRORFILE" "stderr"
PROJECTION  "init=epsg:3857"  END

LAYER
    TYPE LINE
    PROJECTION "init=epsg:4326" END
    STATUS ON 
    GROUP "default"
    NAME "user lines"
    <%= default_connection() %>
    DATA "geom from (select * from user_lines) as a using unique id using srid=4326"
    CLASS
        STYLE
            COLOR '#ff0000'
        END
    END
END

SYMBOL
    NAME "circle"
    TYPE ELLIPSE
    POINTS 1 1 END
    FILLED TRUE
END

LAYER
    TYPE POINT
    PROJECTION "init=epsg:4326" END
    STATUS ON 
    GROUP "default"
    NAME "user points"
    <%= default_connection() %>

    VALIDATION
        'userid'      '^[0-9a-zA-Z\-]+$'
        'session'     '^[0-9a-zA-Z\-]+$'
        'features'    '^[0-9,]+$'
    END
    DATA "geom from (select * from user_points) as a using unique id using srid=4326"
    FILTER ( [userid] = '%userid%' and [session] = '%session%' )
    PROCESSING 'NATIVE_FILTER=feature in (%features%)'
    LABELITEM "label"
    CLASS
        STYLE
	    SIZE [size]
	    SYMBOL [symbol]
            COLOR [color]
	    OPACITY [opacity]
	    OUTLINEWIDTH [outlinewidth]
	    OUTLINECOLOR [outlinecolor]
        END
        LABEL
            TYPE TRUETYPE
            FONT arial
            PARTIALS FALSE
            SIZE [labelsize]
            OUTLINEWIDTH 2
            PRIORITY 5
            COLOR [labelcolor]
            OUTLINECOLOR [labeloutlinecolor]
	    SHADOWSIZE [labelshadowx] [labelshadowy]
	    POSITION AUTO
        END

        LABEL
	    TEXT "[centeredlabel]"
            TYPE TRUETYPE
            FONT arial
            PARTIALS FALSE
            SIZE 8
            OUTLINEWIDTH 2
            PRIORITY 5
            COLOR '#000000'
            OUTLINECOLOR '#ffffff'
	    SHADOWSIZE 3 3
	    FORCE true
        END

    END
END

LAYER
    TYPE POLYGON
    PROJECTION "init=epsg:4326" END
    STATUS ON 
    GROUP "default"
    NAME "user polygons"
    <%= default_connection() %>
    DATA "geom from (select * from user_polygons) as a using unique id using srid=4326"
    CLASS
        STYLE
            COLOR '#0000ff11'
        END
        TEXT '[label]'
        LABEL
            TYPE TRUETYPE
            FONT arial
            PARTIALS FALSE
            SIZE 12
            OUTLINEWIDTH 2
            PRIORITY 5
            COLOR '#0000ff'
            OUTLINECOLOR '#ffffff'
	    MINFEATURESIZE AUTO
        END
    END
END


