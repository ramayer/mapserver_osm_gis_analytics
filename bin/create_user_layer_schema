#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source $DIR/default_environment.sh

psql << EOF

  DROP TABLE IF EXISTS user_lines    CASCADE;
  DROP TABLE IF EXISTS user_polygons CASCADE;
  DROP TABLE IF EXISTS user_points   CASCADE;

  CREATE TABLE user_points (
  	 id             bigserial,

         userid         text,
         layer          text,
         feature        text,
         session        text,      

	 label          text,
         angle          double precision,
	 color          text,
         opacity        int,
         outlinecolor   text,
         outlinewidth   text,
         size           double precision,
         symbol         text,

	 geom           geometry(Point,4326)
  );

  CREATE TABLE user_lines (
  	 id             bigserial,

         userid         text,
         layer          text,
         feature        text,
         session        text,      

	 label          text,
         angle          double precision,
	 color          text,
         opacity        int,
         outlinecolor   text,
         outlinewidth   text,
         size           double precision,
         symbol         text,
 
	 geom	      geometry(LineString,4326)
  );


  CREATE TABLE user_polygons (
  	 id            bigserial,

         userid         text,
         layer          text,
         feature        text,
         session        text,      

	 label          text,
         angle          double precision,
	 color          text,
         opacity        int,
         outlinecolor   text,
         outlinewidth   text,
         size           double precision,
         symbol         text,
 
	 geom	       geometry(MultiPolygon,4326)
  );


  CREATE INDEX "user_points(geom)"   ON user_points using GIST (geom);
  CREATE INDEX "user_lines(geom)"    ON user_lines using GIST (geom);
  CREATE INDEX "user_polygons(geom)" ON user_polygons using GIST (geom);

  CREATE INDEX "user_points(layer)"   ON user_points(layer);
  CREATE INDEX "user_lines(layer)"    ON user_lines(layer);
  CREATE INDEX "user_polygons(layer)" ON user_polygons(layer);


EOF
