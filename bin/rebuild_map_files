#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source $DIR/default_environment.sh

mapdir=$INSTALLDIR/etc/mapserver/map

erb -r `pwd`/templates/styles/subtlecolor.rb     templates/qsgeo.map.erb > $mapdir/qsgeo_subtlecolor.map
erb -r `pwd`/templates/styles/black_on_white.rb  templates/qsgeo.map.erb > $mapdir/qsgeo_black_on_white.map
erb -r `pwd`/templates/styles/another_try.rb     templates/qsgeo.map.erb > $mapdir/qsgeo_another_try.map

erb templates/mapcache.xml.erb > etc/mapcache/mapcache.xml
